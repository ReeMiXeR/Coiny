<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingTop="8dp"
    android:focusable="true"
    android:paddingBottom="8dp"
    android:foreground="@drawable/selectable_white_background">

    <ImageView
        android:id="@+id/provider_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/provider_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/provider_image"
        app:layout_constraintTop_toBottomOf="@id/provider_image"
        app:layout_constraintEnd_toEndOf="@id/provider_image"
        tools:text="Bitcoin" />

</android.support.constraint.ConstraintLayout>